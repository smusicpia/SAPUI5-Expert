<mvc:View controllerName="logaligroup.SAPUI5.controller.HelloPanel"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true">
    <m:Panel
        id="_IDGenPanel1"
        headerText="{i18n>helloPanel}"
        class="sapUiResponsiveMargin"
        width="auto">
        <m:content>
            <m:Button id="helloDialogButton"
                icon="sap-icon://action"
                text="{i18n>helloDialogButton}"
                press=".onOpenDialog"
                class="sapUiSmallMarginEnd"/>
            <m:Button text="{i18n>showHelloButtonText}"
                press=".onShowHello"
                class="sapUiSmallMarginEnd"/>
            <m:Input value="{/recipient/name}"
                valueLiveUpdate="true"
                width="60%"/>
            <m:Text text="Hello {/recipient/name}"
                class="sapUiSmallMargin boldElement sapthemeHighlight-asColor"/>
        </m:content>
    </m:Panel>
    <core:Fragment fragmentName="logaligroup.SAPUI5.view.Form01" type="XML"/>
</mvc:View>

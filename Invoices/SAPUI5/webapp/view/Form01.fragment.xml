<core:FragmentDefinition
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <m:Panel
        headerText="{i18n>panelFrTitle}"
        class="sapUiResponsiveMargin"
        width="50%"
        expandable="{device>/system/phone}"
        expanded="{= !${device>/system/phone} }">
        <f:SimpleForm
            id="_IDSimpleForm1"
            editable="true"
        >
            <f:content>
                <m:Label text="{i18n>labelPerson}" labelFor="_persName"/>
                <m:Input id="_persName" width="40%" />
            </f:content>
        </f:SimpleForm>
    </m:Panel>
</core:FragmentDefinition>
